public class FetchKarel extends SuperKarel
{
    public void run()
    {
        goToBall();
        takeBall();
        backToStart();
        putBall();
    }
    
    //moves Karel to the ball on the ledge facing east
    private void goToBall()
    {
        turnLeft();
        for(int i = 0; i < 4; i++)
        {
            move();
        }
        turnRight();
        move();
        move();
    }
    
    //moves Karel back to starting position facing east on (1,1)
    private void backToStart()
    {
        turnAround();
        move();
        move();
        turnLeft();
        for(int i = 0; i < 4; i++)
        {
            move();
        }
        turnLeft();
    }
}
